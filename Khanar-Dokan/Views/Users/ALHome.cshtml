                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Total Amount-->
    <div class="row">
        <div class="col-lg-10 col-md-10 col-sm-10">
            @if (TempData["total"] == null)
            {
                <h3>
                    Total Bill: $0
                </h3>
            }
            else
            {
                <h3> Total Bill: $@TempData["total"] </h3>
            }
        </div>

    </div>

    <div class="col-lg-2 col-md-2 col-sm-2" style="float:right;margin-top:10px;clear:left">
        <span class="btn btn-warning">@Html.ActionLink("Check Out", "Checkout", "Home")</span>
    </div>
    <!-- slider_area_end -->

    <div class="best_burgers_area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section_title text-center mb-80">
                        <span>Burger Menu</span>
                        <h3>Best Ever Burgers</h3>
                    </div>
                </div>
            </div>
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-xl-6 col-md-6 col-lg-6">
                        <div class="single_delicious d-flex align-items-center">
                            <div class="thumb">
                                <img src="~/img/burger/@Html.DisplayFor(modelItem => item.fimagefile)" alt="">
                            </div>
                            <div class="info">
                                <h3>@Html.DisplayFor(modelItem => item.fname)</h3>
                                <p>@Html.DisplayFor(modelItem => item.fdetails)</p>
                                <span>@Html.DisplayFor(modelItem => item.fprice)</span>
                                <p>
                                @if (item.fStatus == "Available")
                                {
                                    <p>Avaliable</p>
                                    using (Html.BeginForm("AddToCart", "Users", new { id = item.fid}, FormMethod.Post))
                                    {
                                        <h4 style="color:#808080; font-family:'Arial Rounded MT';text-align:center">
                                            <button type="submit" class="btn btn-warning">Add To Cart</button>
                                            
                                        </h4>
                                    }
                                }
                                else
                                {
                                    <p>Not Avaliable</p>
                                }
                            </div>
                        </div>
                    </div>
                 }
            </div>


            <div class="row">
                <div class="col-lg-12">
                    <div class="iteam_links">
                        <a class="boxed-btn5" @Html.ActionLink("More Items", "Home")</a>
                    </div>
                </div>
            </div>
        </div>
