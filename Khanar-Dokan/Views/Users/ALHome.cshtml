                                </a>
                            </div>
                        </div>
                        <div class="col-xl-5 col-lg-5 d-none d-lg-block">
                            <div class="book_room">
                                <div class="book_btn d-none d-xl-block">
                                    @Html.ActionLink("History", "History")
                                </div>
                                <div class="book_btn d-none d-xl-block">
                                    @Html.ActionLink("Logout", "Logout")
                                </div>
                            </div>
                        </div>
