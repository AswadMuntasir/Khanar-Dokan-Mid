    <!-- header-start -->
    <header>
        <div class="header-area ">
            <div id="sticky-header" class="main-header-area">
                <div class="container-fluid p-0">
                    <div class="row align-items-center no-gutters">
                        <div class="col-xl-5 col-lg-5">
                            <div class="main-menu  d-none d-lg-block">
                                <nav>
                                    <ul id="navigation">
                                        <li><a class="active">@Html.ActionLink("Menu", "ALMenu")</a></li>
                                        <li><a class="active">@Html.ActionLink("About Us", "ALAbout")</a></li>
                                        <li><a class="active"> @Html.ActionLink("Contact us", "ALContactUs")</a></li>
                                        <li><a class="active"> @Html.ActionLink("Food Review", "ALFoodReview")</a></li>
                                        <li><a class="active"> @Html.ActionLink("Give Review", "GiveFoodReview")</a></li>
                                        <li><a class="active">@Html.ActionLink("Cart", "AddToCart")</a></li>

                                    </ul>
                                </nav>
                            </div>
                        </div>
                        <div class="col-xl-2 col-lg-2">
                            <div class="logo-img">
                                <a href="ALHome">
